<div class="dashboard">
  <h1 class="dashboard-title">Crear cuenta</h1>

  <form id="register-form" class="product-form" style="max-width:520px;margin:auto">
    <label for="first_name">Nombre</label>
    <input id="first_name" name="first_name" class="form-input" type="text" required />

    <label for="last_name">Apellido</label>
    <input id="last_name" name="last_name" class="form-input" type="text" required />

    <label for="email">Email</label>
    <input id="email" name="email" class="form-input" type="email" required />

    <label for="age">Edad</label>
    <input id="age" name="age" class="form-input" type="number" min="0" />

    <label for="password">Contrase√±a</label>
    <input id="password" name="password" class="form-input" type="password" required />

    <div style="display:flex;gap:8px;margin-top:12px">
      <button type="submit">Crear cuenta</button>
      <a href="/login" style="align-self:center;text-decoration:none;color:inherit;padding:8px 10px;border:1px solid rgba(255,255,255,0.08);border-radius:8px">Volver</a>
    </div>

    <div id="register-error" style="color:#e04b4b;margin-top:10px;display:none"></div>
    <div id="register-success" style="color:#4CAF50;margin-top:10px;display:none"></div>
  </form>
</div>