<div class="dashboard">
  <h1 class="dashboard-title">Iniciar sesión</h1>

  <form id="login-form" class="product-form" style="max-width:420px;margin:auto">
    <label for="email">Email</label>
    <input id="email" name="email" class="form-input" type="email" required />

    <label for="password">Contraseña</label>
    <input id="password" name="password" class="form-input" type="password" required />

    <div style="display:flex;gap:8px;margin-top:12px">
      <button type="submit">Entrar</button>
      <a href="/" style="align-self:center;text-decoration:none;color:inherit;padding:8px 10px;border:1px solid rgba(255,255,255,0.08);border-radius:8px">Volver</a>
    </div>

    <div id="login-error" style="color:#e04b4b;margin-top:10px;display:none"></div>

    <!-- Sugerencia de registro (oculto por defecto, se muestra si login dice que el usuario no existe) -->
    <div id="register-suggestion" style="margin-top:12px;display:none;text-align:center">
      <p style="margin-bottom:8px">¿No tenés cuenta? Registrate ahora:</p>
      <a id="btn-register-now" href="/register" class="form-button" style="padding:8px 12px;border-radius:8px;text-decoration:none">Registrarse</a>
    </div>
  </form>
</div>